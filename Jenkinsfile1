pipeline {
    agent none 
    parameters {
		string(name: 'REPOURL', description: 'SCM repository url address')
		string(name: 'BRANCH', description: 'branch of repository')
    }

    stages {
        stage('prerequisite') {
        	agent any
	        steps {
	        	git url: params.REPOURL, branch: params.BRANCH
		        sh 'ls ./'
	        }
        }

        stage('spotbugs') {
            agent {
                dockerfile {
                    filename 'Dockerfile'
                    dir 'spotbugs'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
	    	sh 'ls /'
		sh 'ls ./'
		sh 'pwd'
		git url: params.REPOURL, branch: params.BRANCH
		sh 'ls /'
		sh 'ls ./'
		sh 'pwd'
                sh '/analyzer a  ./'
            }
        }
    }
}

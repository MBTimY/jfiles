pipeline {
    agent none 

    stages {
        stage('containerScan') {
            agent {
                dockerfile {
                    filename 'Dockerfile'
                    dir 'trivy'
                    }
            }

            steps {
                sh 'id'
                sh 'trivy client --remote http://172.28.16.83:8080 --format template --template "@contrib/gitlab.tpl" python:3.4-alpine'
            }
        }
   }
}

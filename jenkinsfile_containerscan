pipeline {
    agent none 

    stages {
        stage('containerScan') {
            agent {
                dockerfile {
                    filename 'Dockerfile'
                    dir 'trivy'
                    args '-u 0'
                    }
            }

            steps {
                sh 'id'
                sh 'trivy client --remote http://172.28.16.83:8082 --format template --template "/contrib/gitlab.tpl" --output result.json python:3.4-alpine'
            }
        }
   }
}
